    "snapshots": {
      "$ref": "/schema/droplet#/definitions/snapshots"
    },
    "locked": {
      "$ref": "/schema/droplet#/definitions/locked"
    },
    "status": {
      "$ref": "/schema/droplet#/definitions/status"
    },
    "public_ip": {
      "$ref": "/schema/droplet#/definitions/public_ip"
