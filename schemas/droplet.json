{
  "$schema": "http://json-schema.org/draft-04/hyper-schema",
  "title": "DigitalOcean API - Droplet",
  "description": "Droplets are VMs in the DigitalOcean cloud.",
  "type": [
    "object"
  ],
  "definitions": {
    "id": {
      "description": "unique identifier of droplet",
      "example": 32,
      "format": "integer",
      "readOnly": true,
      "type": [
        "integer"
      ]
    },
    "identity": {
      "anyOf": [
        {
          "$ref": "/schema/droplet#/definitions/id"
        }
      ]
    },
    "name": {
      "description": "name used to identify droplet",
      "example": "my droplet",
      "format": "string",
      "readOnly": true,
      "type": [
        "string"
      ]
    },
    "locked": {
      "description": "???",
      "example": false,
      "format": "boolean",
      "readOnly": true,
      "type": [
        "boolean"
      ]
    },
    "status": {
      "description": "current status of droplet",
      "example": "active",
      "format": "string",
      "readOnly": true,
      "type": [
        "string"
      ]
    },
    "public_ip": {
      "description": "public IP address of droplet",
      "example": "192.168.1.1",
      "format": "string",
      "readOnly": true,
      "type": [
        "string"
      ]
    },
    "private_ip": {
      "description": "private IP address or null",
      "example": null,
      "format": "string",
      "readOnly": true,
      "type": [
        "string",
        "null"
      ]
    },
    "image": {
      "description": "image used for droplet",
      "properties": {
        "id": {
          "$ref": "/schema/image#/definitions/id"
        },
        "slug": {
          "$ref": "/schema/image#/definitions/slug"
        },
        "name": {
          "$ref": "/schema/image#/definitions/name"
        },
        "distribution": {
          "$ref": "/schema/image#/definitions/distribution"
        },
        "public": {
          "$ref": "/schema/image#/definitions/public"
        }
      },
      "type": [
        "object"
      ]
    },
    "region": {
      "description": "slug of region for this droplet",
      "example": "nyc2",
      "format": "string",
      "readOnly": true,
      "type": [
        "string"
      ]
    },
    "size": {
      "description": "size used for droplet",
      "properties": {
        "slug": {
          "$ref": "/schema/size#/definitions/slug"
        },
        "memory": {
          "$ref": "/schema/size#/definitions/memory"
        },
        "cpus": {
          "$ref": "/schema/size#/definitions/cpus"
        },
        "disk": {
          "$ref": "/schema/size#/definitions/disk"
        },
        "transfer": {
          "$ref": "/schema/size#/definitions/transfer"
        },
        "price_monthly": {
          "$ref": "/schema/size#/definitions/price_monthly"
        },
        "price_hourly": {
          "$ref": "/schema/size#/definitions/price_hourly"
        }
      },
      "type": [
        "object"
      ]
    },
    "snapshots": {
      "description": "TODO",
      "example": null,
      "format": "string",
      "readOnly": true,
      "type": [
        "string",
        "null"
      ]
    },
    "backups": {
      "description": "TODO",
      "example": null,
      "format": "string",
      "readOnly": true,
      "type": [
        "string",
        "null"
      ]
    },
    "key_ids": {
      "description": "comma separated list of key ids for root access",
      "example": "32,64",
      "format": "numeric CSV",
      "type": [
        "string",
        "null"
      ]
    },
    "image_id": {
      "description": "id of image to use",
      "example": 32,
      "format": "integer",
      "type": [
        "integer"
      ]
    }
  },
  "links": [
    {
      "description": "Create a new droplet.",
      "href": "/droplets",
      "method": "POST",
      "rel": "create",
      "schema": {
        "properties": {
          "name": {
            "$ref": "/schema/droplet#/definitions/name"
          },
          "region": {
            "$ref": "/schema/droplet#/definitions/region"
          },
          "size": {
            "description": "slug of size for this droplet",
            "example": "512mb",
            "format": "string",
            "readOnly": true,
            "type": [
              "string"
            ]
          },
          "image_id": {
            "$ref": "/schema/droplet#/definitions/image_id"
          },
          "key_ids": {
            "$ref": "/schema/droplet#/definitions/key_ids"
          },
          "private_networking": {
            "description": "enable private networking, if available in this region",
            "example": false,
            "format": "boolean",
            "type": [
              "boolean"
            ]
          },
          "backups": {
            "description": "enable backups for this droplet",
            "example": false,
            "format": "boolean",
            "type": [
              "boolean"
            ]
          }
        },
        "required": [
          "name",
          "size",
          "image_id",
          "region"
        ],
        "optional": [
          "key_ids",
          "private_networking",
          "backups"
        ]
      },
      "title": "Create"
    },
    {
      "description": "Delete an existing droplet.",
      "href": "/droplets/{(%2Fschema%2Fdroplet%23%2Fdefinitions%2Fidentity)}",
      "method": "DELETE",
      "rel": "destroy",
      "title": "Delete"
    },
    {
      "description": "Info for existing droplet.",
      "href": "/droplets/{(%2Fschema%2Fdroplet%23%2Fdefinitions%2Fidentity)}",
      "method": "GET",
      "rel": "self",
      "title": "Info"
    },
    {
      "description": "List existing droplet.",
      "href": "/droplets",
      "method": "GET",
      "rel": "instances",
      "title": "List"
    },
    {
      "description": "Update an existing droplet.",
      "href": "/droplets/{(%2Fschema%2Fdroplet%23%2Fdefinitions%2Fidentity)}",
      "method": "PATCH",
      "rel": "update",
      "schema": {
        "properties": {
          "name": {
            "$ref": "/schema/droplet#/definitions/name"
          }
        },
        "required": [
          "name"
        ]
      },
      "title": "Update"
    }
  ],
  "properties": {
    "id": {
      "$ref": "/schema/droplet#/definitions/id"
    },
    "name": {
      "$ref": "/schema/droplet#/definitions/name"
    },
    "region": {
      "$ref": "/schema/droplet#/definitions/region"
    },
    "image": {
      "$ref": "/schema/droplet#/definitions/image"
    },
    "size": {
      "$ref": "/schema/droplet#/definitions/size"
    },
    "backups": {
      "$ref": "/schema/droplet#/definitions/backups"
    },
    "snapshots": {
      "$ref": "/schema/droplet#/definitions/snapshots"
    },
    "locked": {
      "$ref": "/schema/droplet#/definitions/locked"
    },
    "status": {
      "$ref": "/schema/droplet#/definitions/status"
    },
    "public_ip": {
      "$ref": "/schema/droplet#/definitions/public_ip"
    },
    "private_ip": {
      "$ref": "/schema/droplet#/definitions/private_ip"
    }
  },
  "id": "schema/droplet"
}
