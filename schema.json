        "id": {
          "description": "unique identifier of size",
          "example": 2,
          "format": "integer",
          "readOnly": true,
          "type": [
            "integer"
          ]
        },
        "identity": {
          "anyOf": [
            {
              "$ref": "#/definitions/size/definitions/id"
            }
          ]
        },
        "slug": {
          "description": "url friendly name",
